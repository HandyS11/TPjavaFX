<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<HBox alignment="CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindow">
   <children>
      <VBox alignment="CENTER">
         <children>
            <Label fx:id="playerName1" text="Player 1" />
            <Label fx:id="scoreJ1" text="0" />
            <ImageView fitHeight="150.0" fitWidth="150.0" >
               <image>
                  <Image url="@/images/img.png" />
               </image>
            </ImageView>
            <Button onAction="#player1throw" text="Throw" />
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Game!" />
            <Button onAction="#playAgain" text="Play Again!" />
         </children>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label fx:id="playerName2" text="Player 2" />
            <Label fx:id="scoreJ2" text="0" />
            <ImageView fitHeight="150.0" fitWidth="150.0" >
               <image>
                  <Image url="@/images/img.png" />
               </image>
            </ImageView>
            <Button onAction="#player2throw" text="Throw" />
         </children>
      </VBox>
   </children>
</HBox>
