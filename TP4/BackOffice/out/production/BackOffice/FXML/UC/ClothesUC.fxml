<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<fx:root fx:id="clothesUC" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <HBox>
      <VBox>
         <ListView fx:id="colorsListView">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
         </ListView>
      </VBox>
      <VBox>
         <ListView fx:id="sizesListView">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
         </ListView>
         <SplitPane dividerPositions="0.5">
            <items>
               <ChoiceBox/>
               <VBox alignment="TOP_CENTER">
                  <children>
                     <Button fx:id="addSizeButton" onAction="#addSize" text="Add">
                        <VBox.margin>
                           <Insets top="10.0"/>
                        </VBox.margin>
                     </Button>
                     <Button onAction="#removeSize" text="Remove Selected">
                        <VBox.margin>
                           <Insets bottom="10.0" top="10.0"/>
                        </VBox.margin>
                     </Button>
                  </children>
               </VBox>
            </items>
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0"/>
            </VBox.margin>
         </SplitPane>
      </VBox>
   </HBox>
</fx:root>
