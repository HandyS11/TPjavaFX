<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindow">
   <left>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER">
         <children>
            <ChoiceBox fx:id="choiceBox" />
            <ListView fx:id="itemsListView">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></ListView>
            <Button onAction="#addPerfume" text="Add Perfume">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
            <Button onAction="#addClothes" text="Add Clothes">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
            <Button onAction="#deleteSelected" text="Delete Selected">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin></VBox>
   </left>
   <center>
      <Pane fx:id="details" />
   </center>
</BorderPane>
