<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindow">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <ChoiceBox fx:id="choiceBox" />
            <ListView fx:id="itemsListView" />
            <Button text="Add Perfume" onAction="#addPerfume" />
            <Button text="Add Clothes" onAction="#addClothes" />
            <Button text="Delete Selected" onAction="#deleteSelected" />
         </children></VBox>
   </left>
   <center>
      <Pane fx:id="details" >
         <fx:include source="UC/PerfumeUC.fxml" />
      </Pane>
   </center>
</BorderPane>
