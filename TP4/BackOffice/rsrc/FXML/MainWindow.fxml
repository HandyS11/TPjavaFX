<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindow">
   <GridPane>
      <columnConstraints>
         <ColumnConstraints percentWidth="33.0" />
         <ColumnConstraints percentWidth="77.0" />
      </columnConstraints>
      <children>
         <VBox alignment="TOP_CENTER" GridPane.rowIndex="1">
            <ChoiceBox fx:id="choiceBox">
               <VBox.margin>
                  <Insets />
               </VBox.margin></ChoiceBox>
            <ListView fx:id="itemsListView">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ListView>
            <Button onAction="#addPerfume" text="Add Perfume">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button onAction="#addClothes" text="Add Clothes">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button onAction="#deleteSelected" text="Delete Selected">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <GridPane.margin>
               <Insets />
            </GridPane.margin>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </VBox>
         <Pane fx:id="details" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      </children>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
   </GridPane>
</VBox>
