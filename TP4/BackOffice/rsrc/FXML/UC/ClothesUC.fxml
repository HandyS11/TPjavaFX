<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.VBox" fx:id="clothesUC" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ClothesUC">
    <fx:include source="ItemUC.fxml" />
   <HBox>
      <children>
         <VBox alignment="TOP_CENTER">
            <children>
               <ListView fx:id="colorsListView" />
               <ChoiceBox>
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </ChoiceBox>
               <Button text="Add" onAction="#addColor">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </Button>
               <Button text="Remove" onAction="#removeColor">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </Button>
            </children>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </VBox>
         <VBox alignment="TOP_CENTER">
            <children>
               <ListView fx:id="sizesListView" />
               <SplitPane dividerPositions="0.5">
                 <items>
                     <ChoiceBox />
                     <VBox alignment="TOP_CENTER">
                        <children>
                           <Button text="Add" onAction="#addSize">
                              <VBox.margin>
                                 <Insets top="10.0" />
                              </VBox.margin></Button>
                           <Button text="Remove" onAction="#removeSize">
                              <VBox.margin>
                                 <Insets top="10.0" />
                              </VBox.margin></Button>
                        </children>
                     </VBox>
                 </items>
                  <VBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </VBox.margin>
               </SplitPane>
            </children>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </VBox>
      </children>
   </HBox>
</fx:root>
