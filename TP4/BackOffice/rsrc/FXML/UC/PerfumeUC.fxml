<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="perfumeUC" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ListView fx:id="fragrancesListView" prefWidth="400.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></ListView>
        <HBox>
            <children>
                <TextField fx:id="smellTextField">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></TextField>
                <Button onAction="#addSmell" text="Add">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Button>
                <Button onAction="#removeSmell" text="Remove">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Button>
                <Button onAction="#deselectSmell" text="Deselect" />
            </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
        </HBox>
    </children>
</fx:root>
